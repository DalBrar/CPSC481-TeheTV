<UserControl x:Name="SettingsButtonControl" x:Class="TeheTV.SettingsButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeheTV"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
    <Grid x:Name="SettingsButtonGrid" Margin="0" Height="250">
        <Rectangle x:Name="setBtnBackground" Style="{DynamicResource SmoothGreenButton}" Margin="0" Width="200" Height="200" VerticalAlignment="Top"/>
        <Image x:Name="ImageHolder" Source="resources/profiles.png" MaxWidth="200" Margin="0" MouseLeftButtonDown="settingsButtonControl_Pressed" Width="200" Height="200" VerticalAlignment="Top"/>
        <TextBlock x:Name="LabelHolder" Margin="0" FontWeight="ExtraBold" FontSize="36" Foreground="White" FontFamily="Comic Sans MS" Padding="0" TextWrapping="Wrap" Text="LabelHandler" ScrollViewer.VerticalScrollBarVisibility="Disabled" TextAlignment="Center" VerticalAlignment="Bottom">
            <TextBlock.Effect>
                <DropShadowEffect/>
            </TextBlock.Effect></TextBlock>
    </Grid>
</UserControl>
