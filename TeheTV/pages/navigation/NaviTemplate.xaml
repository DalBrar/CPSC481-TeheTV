<Page x:Class="TeheTV.pages.navigation.NaviTemplate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeheTV.pages.navigation"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1024"
      Title="NaviTemplate">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Button Grid.Column="1" Grid.Row="1" Grid.RowSpan="1" 
                Background="White" BorderThickness="0"
                Margin="10,10,10,10" Opacity="0.7">
            <StackPanel>
                <Image Source="/resources/Settings-icon.png"
                       MaxHeight="60"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="3" Grid.Row="1"
                Background="White" BorderThickness="0"
                Opacity="0.5">
            <StackPanel>
                <Image Source="/resources/direction_top_l.png"
                       MaxHeight="40"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="4" Grid.Row="1"  
                Background="White" BorderThickness="0"
                Opacity="1">
            <StackPanel>
                <Image Source="/resources/top.png"
                       MaxHeight="70"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="6" Grid.Row="1"  
                Background="White" BorderThickness="0"
                Opacity="1">
            <StackPanel>
                <Image Source="/resources/top.png"
                       MaxHeight="70"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="8" Grid.Row="1"  
                Background="White" BorderThickness="0"
                Opacity="1">
            <StackPanel>
                <Image Source="/resources/top.png"
                       MaxHeight="70"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="10" Grid.Row="1"  
                Background="White" BorderThickness="0"
                Opacity="1">
            <StackPanel>
                <Image Source="/resources/top.png"
                       MaxHeight="70"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="11" Grid.Row="1"
                Background="White" BorderThickness="0"
                 Opacity="0.5">
            <StackPanel>
                <Image Source="/resources/direction_top_r.png"
                       MaxHeight="40"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="1"
                Background="White" BorderThickness="0"
                Opacity="1" Margin="20,0,0,0">
            <StackPanel>
                <Image Source="/resources/direction_mid_l.png"
                       MaxWidth="30" MaxHeight="150"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="14" Grid.Row="3" Grid.ColumnSpan="1"
                Background="White" BorderThickness="0"
                Opacity="1" Margin="0,0,20,0">
            <StackPanel>
                <Image Source="/resources/direction_mid_r.png"
                       MaxWidth="30" MaxHeight="150"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="4"
                Background="White" BorderThickness="0"
                Opacity="1" Margin="10,0,15,0">
            <StackPanel>
                <Image Source="/resources/middle.png"
                       Height="175" Width="260"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="4" Grid.Row="3" Grid.ColumnSpan="7"
                Background="White" BorderThickness="0"
                Opacity="1" Margin="70,0,50,0">
            <StackPanel>
                <Image Source="/resources/middle.png"
                       Height="207" Width="258"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="10" Grid.Row="3" Grid.ColumnSpan="4"
                Background="White" BorderThickness="0"
                Opacity="1" Margin="40,0,10,0"  Grid.RowSpan="1">
            <StackPanel>
                <Image Source="/resources/middle.png"
                       Height="175" Width="260"/>
            </StackPanel>
        </Button>




    </Grid>
</Page>
