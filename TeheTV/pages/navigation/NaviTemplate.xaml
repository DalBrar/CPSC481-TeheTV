<Page x:Name="TemplateControl" x:Class="TeheTV.pages.navigation.NaviTemplate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeheTV.pages.navigation"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1024"
      Title="NaviTemplate">

    <Grid x:Name="TemplateGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="330"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridSubmenu">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="460"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image x:Name="gear" Grid.Row="1" Grid.Column="1" Source="/resources/Settings-icon.png" MaxHeight="60"/>
        </Grid>
        <Grid x:Name="gridContent" Grid.Row="1">
            <ScrollViewer x:Name="scrollViewer" Margin="0" HorizontalContentAlignment="Center" Padding="25" VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Center" HorizontalScrollBarVisibility="Auto">
                <StackPanel x:Name="contentArea"  Orientation="Horizontal"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
